<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.smslistner">

    <uses-feature android:name="android.hardware.telephony" android:required="false" />

    <uses-permission android:name="android.permission.RECEIVE_SMS"/>
    <uses-permission android:name="android.permission.READ_SMS"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application>
        <!-- Updated MainActivity declaration with android:exported attribute -->
        <activity
            android:name=".MainActivity"
            android:exported="true"> <!-- This line is added to satisfy Android 12 requirements -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- SMS Receiver Declaration -->
        <receiver
            android:name=".SmsReceiver"
            android:exported="true"> <!-- Ensure this is set appropriately based on whether external apps can invoke this receiver -->
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>
    </application>
</manifest>
